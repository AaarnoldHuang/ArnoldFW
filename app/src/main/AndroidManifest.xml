<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.arnoldwho.arnold.arnoldfw">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppinfoActivity"
            android:label="@string/title_activity_appinfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PackageInfoActivity"
            android:label="@string/title_activity_package_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowActivitiesActivity"
            android:label="@string/title_activity_show_activities"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowServicesActivity"
            android:label="@string/title_activity_show_services"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowBroadcastActivity"
            android:label="@string/title_activity_show_broadcast"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>